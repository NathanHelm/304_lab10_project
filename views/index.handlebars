                <h1 class="menu-title"> Hello, {{username}} </h1> 
                {{/if}}
            </div>
        <div>
            <ul class="menu">
                <li><a href="/">Home</a></li>
                <li><a href="/listprod">Our Products</a></li>
                <li><a href="/listorder">Orders</a></li>
                <li><a href="/admin">Administrators</a></li>
                <li><a href="/showcart">MyCart</a></li>
